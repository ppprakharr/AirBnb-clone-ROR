<div class="lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pr-8">
    <!-- Description and details -->
    <div class="mt-4 border-t border-gray-300 pt-10">
        <h2 class="text-xl font-medium leading-6 text-gray-900">What this place offers</h2>
        <div class="mt-6 grid grid-cols-1 lg:grid-cols-2">
            <% amenities.limit(8).each do |amenity|%>
                <div class="py-2 flex item-center">
                    <%=image_tag "amenity_icons/#{amenity.icon}", class: "h-6 w-6"%>
                    <p class="ms-4 font-light"><%=amenity.name%></p>
                </div>
            <%end%>
        </div>
        <% if amenities.count > 8%>
                <button type="button" class="mt-8 rounded-md bg-white px-4 py-3 text-md font-base text-gray-900
                    ring-1 ring-inset ring-black hover:bg-gray-50">
                Show all <%= amenities.count%> amenities
                </button>
            <%end%>
    </div>
</div>