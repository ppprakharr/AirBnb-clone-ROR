<div class="flex justify-between py-4 ">
    <%= form.label category_rating, class: 'text-sm font-medium text-gray-900 leading-6' %>
    <div class="mt-2 flex items-center">
        <%= form.hidden_field category_rating, data: {'rating-target': category_rating}%>
        <%5.times do |i|%>
            <svg
                class="cursor-pointer h-6 w-6 fill-gray-300 flex-shrink-0"
                viewBox="0 0 20 20" 
                fill="currentColor" 
                data-rating = "<%=i + 1%>"
                data-category='<%=category_rating%>'
                aria-hidden="true"
                data-rating-target="star"
                data-action="click->rating#setRating"
            >
                <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
            </svg>
        <%end%>
    </div>
</div>